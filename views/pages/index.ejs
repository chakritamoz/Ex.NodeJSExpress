<!DOCTYPE html>

<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body class="container">

    <header>
      <%- include('../partials/header.ejs') %>
    </header>

    <main>
      <div class="container">
        <div class="row my-3">
          <% products.forEach(item => { %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <a href="/<%= item._id %>"><img class="card-img-top" src="./images/products/<%= item.image %>" alt="<%= item.name %>" /></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="/<%= item._id %>"><%= item.name %></a>
                  </h4>
                  <h5>ราคา <%= item.price %> บาท</h5>
                  <p class="card-text"><%= item.description %></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </main>

    <footer>
      <%- include('../partials/footer.ejs') %>
    </footer>

  </body>
</html>